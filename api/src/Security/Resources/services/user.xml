<container xmlns="http://symfony.com/schema/dic/services">
    <services>
        <service
            id="OpenSID\Security\Repository\UserRepository"
            class="OpenSID\Security\Repository\UserRepository"
            autowire="true"
            autoconfigure="true"
            public="true"
        >
            <tag name="doctrine.repository_service"/>
        </service>
        <service
            id="opensid.user.persister.user"
            class="OpenSID\Security\DataPersister\UserPersister"
            autoconfigure="true"
            autowire="true"
            public="true"
        >
            <tag name="api_platform.data_persister"/>
        </service>
    </services>
</container>
