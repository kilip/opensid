<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping">
    <class name="OpenSID\Application\Model\User">
        <attribute name="id">
            <group>user:read</group>
            <group>admin:user:read</group>
        </attribute>
        <attribute name="username">
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="plainPassword">
            <group>user:write</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="group">
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="email">
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="lastLogin">
            <group>user:read</group>
            <group>admin:user:read</group>
        </attribute>
        <attribute name="active">
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="nama">
            <group>blog:read</group>
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="company">
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="phone">
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
        <attribute name="foto">
            <group>user:read</group>
            <group>user:write</group>
            <group>admin:user:read</group>
            <group>admin:user:write</group>
        </attribute>
    </class>
</serializer>
